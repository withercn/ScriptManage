@model ScriptManage.Models.NewScriptModel
@{
    ViewBag.Title = "创建脚本";
    Layout = "~/Views/Shared/_aside.cshtml";
    var site = ViewBag.Site;
    var type = ViewBag.Type;
}

<div class="module newscript">
    @using (Html.BeginForm("New", "Script"))
    {
        @Html.AntiForgeryToken()
        <header>
            <h3>@Html.LabelFor(s=>s.name)
                @Html.TextBoxFor(s => s.name, new { autofocus = "autofocus", style = "width:400px;" })</h3>
            <div class="pager middle">
                @Html.LabelFor(s => s.siteid)
                @Html.DropDownListFor(s => s.siteid, (SelectList)site, new { disabled = "disabled" })
                @Html.LabelFor(s => s.type)
                @Html.DropDownListFor(s => s.type, (SelectList)type, new { @class = "selects"})
            </div>
        </header>
        <div class="editor" style="display: block;border-bottom:1px #ccc solid;">
            @Html.TextAreaFor(s => s.code, new { @class = "code1"})
        </div>
        <div class="message">
            <span class="red">
                @Html.ValidationMessageFor(s => s.name)
                @Html.ValidationMessageFor(s => s.siteid)
                @Html.ValidationMessageFor(s => s.type)
                @Html.ValidationMessageFor(s => s.code)
            </span>
            @Html.ValidationSummary(true)
            @ViewBag.Message
        </div>
        <div class="clear"></div>
        <div class="button pager">
            <button class="normal" type="submit">创建脚本</button>
            <button class="normal" type="reset">重新输入</button>
        </div>
        }
</div>
